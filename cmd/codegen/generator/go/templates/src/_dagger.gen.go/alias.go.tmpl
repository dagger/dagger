// convertSlice converts a slice of one type to a slice of another type using a
// converter function
func convertSlice[I any, O any](in []I, f func(I) O) []O {
  out := make([]O, len(in))
  for i, v := range in {
    out[i] = f(v)
  }
  return out
}

