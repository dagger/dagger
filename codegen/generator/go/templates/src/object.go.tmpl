	{{- $typeName := $field.TypeRef | FormatOutputType }}
	{{- if ne $typeName "Client" }}
	    {{- if and $field.TypeRef.IsList (IsListOfObject $field.TypeRef) }}

	err := q.Execute(ctx, r.c)
