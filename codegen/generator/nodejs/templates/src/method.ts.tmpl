{{ define "method" }}
{{- template "method_comment" .Description }}
{{- "" }}  {{ .Name -}}({{- template "args" .Args -}}){{ template "return" .TypeRef }} {
		{{- if .TypeRef }}
    return new {{ .TypeRef | FormatOutputType }}({queryTree: [
      ...this._queryTree,
      {
      operation: '{{ .Name}}'
			{{- if .Args }},
      args: { {{- template "call_args" .Args -}} }
			{{- end }}
      }
    ], host: this.clientHost})
		{{- end }}
  }
{{- end }}
