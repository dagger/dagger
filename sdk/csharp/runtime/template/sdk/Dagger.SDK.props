<Project>
  <!--
    Dagger SDK Configuration Properties

    This file is automatically generated and updated by 'dagger develop'.
    DO NOT manually edit this file - changes will be overwritten.

    To customize your module's build, edit your .csproj file instead.
  -->

  <PropertyGroup>
    <!-- Enable implicit usings for common namespaces -->
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Enable nullable reference types -->
    <Nullable>enable</Nullable>

    <!-- Disable default compile items to manually control SDK source inclusion -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- Generate XML documentation for Dagger introspection -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- Disable System.IO implicit using to avoid conflict with Dagger.Directory -->
    <Using Remove="System.IO" />
  </ItemGroup>

  <ItemGroup>
    <!-- Required by vendored SDK source code (sdk/**/*.cs) -->
    <PackageReference Include="OpenTelemetry" Version="1.14.0" />
    <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.14.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="10.0.0" />
  </ItemGroup>
</Project>
