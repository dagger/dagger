<Project>
  <!--
    Dagger SDK Build Targets

    This file is automatically generated and updated by 'dagger develop'.
    DO NOT manually edit this file - changes will be overwritten.

    To customize your module's build, edit your .csproj file instead.
  -->

  <ItemGroup>
    <!-- Explicitly include all .cs files (SDK automatic inclusion disabled) -->
    <!-- Exclude obj/bin to avoid duplicate auto-generated assembly attributes -->
    <Compile Include="**/*.cs" Exclude="**/obj/**;**/bin/**" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include dagger.json as additional file for module configuration analyzers -->
    <!-- This path is automatically set during 'dagger init' based on the â€“â€“source flag -->
    <AdditionalFiles Include="DAGGER_JSON_PATH" />

    <!-- Include Dagger SDK Analyzers and Code Fixes for IDE support -->
    <!-- To disable analyzers, add this to your .csproj: <EnableDaggerAnalyzers>false</EnableDaggerAnalyzers> -->
    <Analyzer
      Include="$(MSBuildThisFileDirectory)analyzers/dotnet/cs/Dagger.SDK.Analyzers.dll"
      Condition="'$(EnableDaggerAnalyzers)' != 'false'"
    />

    <Analyzer
      Include="$(MSBuildThisFileDirectory)analyzers/dotnet/cs/Dagger.SDK.CodeFixes.dll"
      Condition="'$(EnableDaggerAnalyzers)' != 'false'"
    />
  </ItemGroup>
</Project>
