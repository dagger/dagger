:root {
    --font-primary: 'General Sans Medium', 'General Sans Medium Placeholder', system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif, BlinkMacSystemFont;
    --font-secondary: 'General Sans Medium', 'General Sans Medium Placeholder', system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif, BlinkMacSystemFont;
    --font-monospace: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    --title-text-color: #0d0c1b;

    --primary-color: #171718;

    --link-color-primary: var(--primary-color);
    --link-hover-color-primary: #3a8798;
}

body {
    background-color: #f8f4ef;
}
