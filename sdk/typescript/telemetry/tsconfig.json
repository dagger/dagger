{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src"],
}
