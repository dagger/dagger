// Inspired by TSConfig bases: https://github.com/tsconfig/bases/blob/main/bases/recommended.json
{
  "include": ["./sdk/nodejs/dagger/**/*"],
  "exclude": ["./sdk/nodejs/dagger/api/example/**/*"],
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "outDir": "./sdk/nodejs/dagger/dist",
    "rootDir": "./sdk/nodejs/dagger",
    "esModuleInterop": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "dagger-sdk-nodejs"
}
